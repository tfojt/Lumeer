<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:Lumeer.ViewModels" 
             xmlns:views="clr-namespace:Lumeer.Views"
             x:Class="Lumeer.Views.TaskDetailPage"
             x:DataType="viewModels:TaskDetailViewModel">
    <ContentPage.Content>
        <StackLayout>
            <views:TaskTableView x:Name="taskTableView"
                                 IsVisible="{Binding TableSelected}"/>
            <Button Text="Save"
                    Command="{Binding SaveCmd}"
                    VerticalOptions="End"
                    HorizontalOptions="End"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>