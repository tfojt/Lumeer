<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:viewModels="clr-namespace:Lumeer.ViewModels" 
             xmlns:rest="clr-namespace:Lumeer.Models.Rest"
             x:Class="Lumeer.Views.TasksPage"
             Title="Tasks">
    <ContentPage.BindingContext>
        <viewModels:TasksViewModel/>
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0" 
                         Orientation="Horizontal">
                <SearchBar x:Name="searchBar"
                           Placeholder="Search..."
                           Text="{Binding SearchedText}"
                           SearchCommand="{Binding SearchCmd}"/>
                <Button Text="..." 
                        Command="{Binding SearchSettingsCmd}"/>
            </StackLayout>
            <ListView Grid.Row="1"
                      ItemsSource="{Binding DisplayedTasks}"
                      SelectedItem="{Binding SelectedTask, Mode=TwoWay}"
                      IsPullToRefreshEnabled="True"
                      RefreshCommand="{Binding RefreshTasksCmd}"
                      IsRefreshing="{Binding IsRefreshingTasks}"
                      HasUnevenRows="True"
                      ItemTemplate="{Binding TasksDataTemplate, Mode=OneWay}">
            </ListView>
            <Button Grid.Row="1"
                    HorizontalOptions="End"
                    VerticalOptions="End"
                    Text="+"
                    Command="{Binding CreateTaskCmd}"
                    CornerRadius="35"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>