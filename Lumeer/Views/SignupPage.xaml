<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lumeer.Views.SignupPage"
             Title="Sign Up">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Margin="10">
                <StackLayout Margin="10">
                    <Button Text="Sign up with Github"/>
                    <Button Text="Sign up with Google"/>
                </StackLayout>
                <Label Text="or" HorizontalOptions="Center"/>
                <StackLayout Margin="10">
                    <Entry Keyboard="Email" Placeholder="your@work.email"/>
                    <Entry IsPassword="True" Placeholder="your password"/>
                    <Entry Keyboard="Telephone" Placeholder="919-234-5678"/>
                </StackLayout>
            </StackLayout>

            <Button Text="Sign up" BackgroundColor="MediumSpringGreen"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>