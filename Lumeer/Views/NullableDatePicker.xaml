<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lumeer.Views.NullableDatePicker">
    <ContentView.Content>
        <StackLayout>
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped"></TapGestureRecognizer>
            </StackLayout.GestureRecognizers>
            
            <Label x:Name="dateLabel" VerticalOptions="CenterAndExpand" TextColor="Black" FontSize="Body"/>

            <DatePicker x:Name="datePicker" IsVisible="false" DateSelected="datePicker_DateSelected"/>
        </StackLayout>
  </ContentView.Content>
</ContentView>